@model EntityLayer.Concrete.Portfolio
@{
    ViewData["Title"] = "AddPortfolio";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header bg-transparent border-0">
    <h3 class="text-dark mb-0">Proje Ekleme Sayfası</h3>
</div>

@using (Html.BeginForm("AddPortfolio", "Portfolio", FormMethod.Post))
{
    <br />
    @Html.Label("Proje Başlığı")
    <br />
    @Html.TextBoxFor(x=>x.Name, new { @class = "form-control" })
    <br />
    <lable> Görsel 1 </lable>
    @Html.TextBoxFor(x=>x.ImageUrl, new { @class = "form-control" })
    <br />
    <lable> Görsel 2 </lable>
    @Html.TextBoxFor(x=>x.ImageUrl2, new { @class = "form-control" })
    <br />
    <lable> Proje Görsellleri 1 </lable>
    @Html.TextBoxFor(x=>x.Image1, new { @class = "form-control" })
    <br />
    <lable> Proje Görsellleri 2 </lable>
    @Html.TextBoxFor(x=>x.Image2, new { @class = "form-control" })
    <br />
    <lable> Proje Görsellleri 3 </lable>
    @Html.TextBoxFor(x=>x.Image3, new { @class = "form-control" })
    <br />
    <lable> Proje Görsellleri 4 </lable>
    @Html.TextBoxFor(x=>x.Image4, new { @class = "form-control" })
    <br />
    <lable> Pllatform Görseli </lable>
    @Html.TextBoxFor(x=>x.Platform, new { @class = "form-control" })
    <br />
    <lable> Proje Fiyatı </lable>
    @Html.TextBoxFor(x=>x.Price, new { @class = "form-control" })
    <br />
    <lable> Proje URL </lable>
    @Html.TextAreaFor(x=>x.ProjectUrl, 10, 3, new { @class = "form-control" })
    <br />
 
    <button class="btn btn-outline-info"> Kaydet </button>
}
