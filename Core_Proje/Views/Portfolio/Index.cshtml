@using EntityLayer.Concrete
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Dark table -->
<div class="row mt-5">
    <div class="col">
        <div class="card bg-default shadow">
            <div class="card-header bg-transparent border-0">
                <h3 class="text-white mb-0">Projeler</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-dark table-flush">
                    <thead class="thead-dark">
                        <tr>
                       
                            <th scope="col">Proje</th>
                            <th scope="col">Ücret</th>
                            <th scope="col">Durum</th>
                            <th scope="col">Görseller</th>
                            <th scope="col">Tamamlanma Oranı</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                       @foreach (var item in Model)
                        {
                              <tr>
                            <th scope="row">
                                <div class="media align-items-center">
                                    <a href="#" class="avatar rounded-circle mr-3">
                                        <img alt="Image placeholder" src="@item.Platform">
                                    </a>
                                    <div class="media-body">
                                        <span class="mb-0 text-sm">@item.Name</span>
                                    </div>
                                </div>
                            </th>
                            <td class="budget">
                                @item.Price
                            </td>
                            <td>
                                <span class="badge badge-dot mr-4">
                                    <i class="bg-success"></i>
                                    <span class="card-status-bullet"> Tamalandı </span>
                                </span>
                            </td>
                            <td>
                                <div class="avatar-group">
                                    <a href="#" class="avatar avatar-sm" data-toggle="tooltip" data-original-title="Ryan Tompson">
                                        <img alt="Image placeholder" src="~/argon-dashboard-master/assets/img/theme/team-1-800x800.jpg" class="rounded-circle">
                                    </a>
                                    <a href="#" class="avatar avatar-sm" data-toggle="tooltip" data-original-title="Romina Hadid">
                                        <img alt="Image placeholder" src="~/argon-dashboard-master/assets/img/theme/team-2-800x800.jpg" class="rounded-circle">
                                    </a>
                                    <a href="#" class="avatar avatar-sm" data-toggle="tooltip" data-original-title="Alexander Smith">
                                        <img alt="Image placeholder" src="~/argon-dashboard-master/assets/img/theme/team-3-800x800.jpg" class="rounded-circle">
                                    </a>
                                    <a href="#" class="avatar avatar-sm" data-toggle="tooltip" data-original-title="Jessica Doe">
                                        <img alt="Image placeholder" src="~/argon-dashboard-master/assets/img/theme/team-4-800x800.jpg" class="rounded-circle">
                                    </a>
                                </div>
                            </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="mr-2">@item.Value%</span>
                                        <div>
                                            <div class="progress">
                                                <div class="progress-bar
                    @(item.Value >= 100 ? "bg-success" : item.Value > 50 ? "bg-warning" : "bg-danger")"
                                                     role="progressbar"
                                                     aria-valuenow="@item.Value"
                                                     aria-valuemin="0"
                                                     aria-valuemax="100"
                                                     style="width: @item.Value%;"></div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            <td class="text-right">
                                <div class="dropdown">
                                    <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                        <a class="dropdown-item" href="#">Action</a>
                                        <a class="dropdown-item" href="#">Another action</a>
                                        <a class="dropdown-item" href="#">Something else here</a>
                                    </div>
                                </div>
                            </td>
                        </tr> 
                        } 
                                          
                    </tbody>
                </table>
                
            </div>
        </div>
        <br />
        <a href="/Portfolio/AddPortfolio/" class="btn btn-outline-primary">Yeni Proje Girişi</a>
    </div>
</div>