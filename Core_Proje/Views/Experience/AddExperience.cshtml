@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("AddExperience", "Experience", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">           
                <p class="card-description"> Deneyim Ekleme Paneli </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Başlık</label>
                        <input type="text" class="form-control" name="Name" placeholder="başlık adını yazın...">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Tarih</label>
                        <input type="text" class="form-control" name="Date" placeholder="başlagıç ve bitiş tarihi yazın...">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Görsel URL</label>
                        <input type="text" class="form-control" name="ImageUrl" placeholder="görsel yolunu yazın...">
                    </div>                               
                    <div class="form-group">
                        <label for="exampleTextarea1">Açıklama</label>
                        <textarea class="form-control" name="Description" rows="4"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">İptal Et</button>
                </form>
            </div>
        </div>
    </div>
}


