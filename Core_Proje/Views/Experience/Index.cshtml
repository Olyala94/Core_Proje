@using EntityLayer.Concrete
@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
    int count = 0;
}

<div class="row">
    <!-- Bordered table -->
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Deneyimler</h4>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Başlık </th>
                                <th> Tarih </th>
                                <th> Sil </th>
                                <th> Güncelle </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count += 1;
                                <tr>
                                    <td> @count </td>
                                    <td> @item.Name </td>
                                    <td> @item.Date </td>
                                    <td> <a href="/Experience/DeleteExperience/@item.ExperienceID" onclick="return confirm('Silmek istediğinize emin misiniz?')"  class="btn btn-outline-danger">Sil</a></td>
                                    <td> <a href="/Experience/EditExperience/@item.ExperienceID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>                 
                </div>
            </div> 
           
        </div> 
      
    </div>
    
    <div class="card-body"><a href="/Experience/AddExperience/" class="btn btn-outline-info"> + Yeni Deneyim Ekle</a></div>
@*    <div class="card-body"><a class="nav-link btn btn-success create-new-button" href="/Experience/AddExperience/">+ Create New Project</a></div>*@
</div>
