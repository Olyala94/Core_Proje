@using EntityLayer.Concrete
@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Dark table -->
<div class="row mt-5">
    <div class="col">
        <div class="card bg-default shadow">
            <div class="card-header bg-transparent border-0">
                <h3 class="text-white mb-0">Deneyim Listesi Tablosu</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-dark table-flush">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Başlış</th>    
                            @*<th scope="col">Açıklama</th>*@
                            <th scope="col">Tarih</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Düzenle</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">
                                @item.ExperienceID
                            </th>
                            <td>
                                @item.Name
                            </td>
                           @* <td>
                                @item.Description
                            </td>*@
                            <td>
                               @item.Date
                            </td>
                            <td><a href="/Experience/DeleteExperience/@item.ExperienceID" class="btn btn-outline-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')"><i class="fa fa-trash">Sil</i></a></td>
                            <td><a href="/Experience/EditExperience/@item.ExperienceID" class="btn btn-outline-secondary small"><i class="fa fa-trash">Güncelle</i></a></td>
                        </tr>
                    }
                </table>                
            </div>          
        </div>
        <br />
        <a href="/Experience/AddExperience/" class="btn btn-primary small">Yeni Deneyim Ekle</a>
    </div>
</div>

