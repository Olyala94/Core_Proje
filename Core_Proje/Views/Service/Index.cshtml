@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Dark table -->
<div class="row mt-5">
    <div class="col">
        <div class="card bg-default shadow">
            <div class="card-header bg-transparent border-0">
                <h3 class="text-white mb-0">Hizmet Listesi Tablosu</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-dark table-flush">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Başlış</th>
                         
                            <th scope="col">Sil</th>
                            <th scope="col">Düzenle</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">
                                @item.ServiceID
                            </th>
                            <td>
                                @item.Title
                            </td>

                            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a></td>
                            <td><a href="/Service/EditService/@item.ServiceID" class="btn btn-outline-secondary small">Güncelle</a></td>
                        </tr>
                    }
                </table>
            </div>
        </div>
        <br />
        <a href="/Service/AddService/" class="btn btn-primary small">Yeni Hizmet Ekle</a>
    </div>
</div>

